{% extends "FOSUserBundle::layout2.html.twig" %}

{% block page_header %}Профиль пользователя{% endblock %}

{% block fos_user_content %}
    <div class="row">
        <div class="col-xs-6">
            <div class="row">
                <div class="col-xs-2">Логин:</div>
                <div class="col-xs-4">{{ user.username }}</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Фамилия:</div>
                <div class="col-xs-4">{{ user.lastName }}</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Имя:</div>
                <div class="col-xs-4">{{ user.firstName }}</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Отчество:</div>
                <div class="col-xs-4">{{ user.surName }}</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Email:</div>
                <div class="col-xs-4">{{ user.email }}</div>
            </div>
            <div class="row">
                <div class="col-xs-2">Телефон:</div>
                <div class="col-xs-4">{{ user.phone }}</div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-2"></div>
                <div class="col-xs-4">
                    <a href="{{ path('fos_user_profile_edit') }}">
                        <button class="btn btn-primary">Изменить</button>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xs-6">
            {{ include('BankrotSiteBundle::subscription.html.twig') }}
        </div>
    </div>
{% endblock fos_user_content %}